<Window x:Class="_07._05.Windows.ChangeMinConuntWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07._05.Windows"
        mc:Ignorable="d"
        FontFamily="Segoe Print"
        Title="Черновик" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новое значение" TextWrapping="Wrap" Margin="40" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBox x:Name="tbChangeMinCount" Grid.Row="1" Margin="40,45" VerticalContentAlignment="Center" FontSize="18"/>

        <Button Grid.Row="2" Margin="80, 40" Background="{StaticResource AccentColor}" Content="Изменить" FontSize="18" Name="btnChangeMinCount" Click="btnChangeMinCount_Click"/>

    </Grid>
</Window>
